<% include ./partials/header.ejs %>

		<div class="container">
			<a id="new-song" href="/songs/new">Want to Add a New Song? Click Here.</a>
			<div id="song-player">
				<!-- Soundcloud Embed Code //Song => Share => Embed => Code -->
			</div>
		</div>
		<div class="container">
			<h2 class="sub-header">Lyrics</h2>

		<!-- Lyrics from API call with url: (http://api.musixmatch.com/ws/1.1/track.lyrics.get?track_id=53410090&apikey=#) -->
			<section class="content-box" id="lyrics"></section>
		</div>
		<div class="container" id="buttons">
			<button class="h1 col-md-9 musicButtons addPlaylist" data-song-id="">Add To Playlist</button>
			<button class="btn btn-primary col-md-9 musicButtons" id="randomize">I'm Feeling Lucky</button>
			<div class="dropdown">
				<button class="btn btn-warning dropdown-toggle col-md-9 musicButtons" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" id="playlist">Your Playlist</button>
				<ul class="dropdown-menu col-md-9" aria-labelledby="playlist" id="dropdown">
				</ul>
			</div>
		</div>
		<div class="container">
			<h2 class="sub-header">Discussion</h2>
			<ul class="comment-section">
				<h3 class="Join the Discussion!"></h3>
				<li class="content-box" id="comment">Your Comments Here</li>
		</div>
		<div class="form-group">
			<label for="addComment" class="sub-header">Add a Comment:</label>
			<textarea class="form-control" rows="7" id="addComment"></textarea>
			<button class="btn btn-info" id="post-comment">Post Comment</button>
		</div>

		<div class="modal fade" tabindex="-1" role="dialog" id="commentModal">
		  <div class="modal-dialog" role="document">
		    <div class="modal-content content-box">
		      <div class="modal-header">
		        <h5 class="modal-title sub-header">Edit Comment</h5>
		        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
		          <span aria-hidden="true">&times;</span>
		        </button>
		      </div>
		      <div class="modal-body">
						<div class="form-group">
  						<textarea class="form-control" rows="5" id="edit-comment"></textarea>
						</div>		      	
		      </div>
		      <div class="modal-footer">
		      	<button type="button" class="btn btn-danger" id="delete-comment-button">Delete Comment</button>
		        <button type="button" class="btn btn-primary" id="save-comment-button">Save changes</button>
		        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
		      </div>
		    </div>
		  </div>
		</div>
		<!-- jQuery -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

		<!-- Popper -->
